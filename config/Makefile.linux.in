include ../Makefile.config


#-------------------------------------------------------------------------
# File lists
#-------------------------------------------------------------------------
OBJS = \
cpumeter.o \
memmeter.o \
swapmeter.o \
wlinkmeter.o \
nfsmeter.o \
intmeter.o \
btrymeter.o \
raidmeter.o \
tzonemeter.o \
lmstemp.o \
serialmeter.o \
MeterMaker.o

CFILES := $(OBJS:.o=.cc)
DEPFILES := $(OBJS:%=.%.d)

#-----------------------------------------------------------------------
# Rules
#-----------------------------------------------------------------------

all : libmeter.a

libmeter.a : $(OBJS)
	ar cvr libmeter.a $(OBJS)
	@RANLIB@ $@

clean :
	rm -f $(OBJS) $(DEPFILES) libmeter.a *~

# Automatic dependencies
@AUTODEPEND@
