#intmeter.o \

OBJS = \
MeterMaker.o \
btrymeter.o \
cpumeter.o \
diskmeter.o \
intmeter.o \
intratemeter.o \
kernel.o \
loadmeter.o \
memmeter.o \
netmeter.o \
pagemeter.o \
swapmeter.o \
sensor.o \
coretemp.o



CFILES := $(OBJS:.o=.cc)
DEPFILES := $(OBJS:%=.%.d)

#-----------------------------------------------------------------------

all : libmeter.a # concatdepend

clean :
	rm -f $(OBJS) $(DEPFILES) libmeter.a *~

libmeter.a : $(OBJS)
	ar cvr libmeter.a $(OBJS)
	@RANLIB@ $@

