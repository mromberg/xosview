include ../Makefile.config
@AUTODEPRULE_SUBDIR@

CXXFLAGS += -I@top_srcdir@

OBJS = \
MeterMaker.o \
@BTRYMETER@ \
cpumeter.o \
memmeter.o \
swapmeter.o \
swapinternal.o \
netmeter.o \
loadmeter.o \
diskmeter.o \
pagemeter.o \
intmeter.o \
intratemeter.o \
kernel.o

#  This next one is not yet supported in the NetBSD port.
#serialmeter.o \

CFILES := $(OBJS:.o=.cc)
DEPFILES := $(OBJS:%=.%.d)

#-----------------------------------------------------------------------

all : libmeter.a # concatdepend

clean :
	rm -f $(OBJS) $(DEPFILES) libmeter.a *~

libmeter.a : $(OBJS)
	ar cvr libmeter.a $(OBJS)
	@RANLIB@ $@

@AUTODEPEND@
