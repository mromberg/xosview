#
# default Makefile template
#
# This is for platforms xosview has not been ported to yet.
# Just contains an example meter (always on).
#
include ../Makefile.config
@AUTODEPRULE_SUBDIR@

OBJS = \
loadmeter.o \
cpumeter.o \
memmeter.o \
fsmeter.o \
swapmeter.o \
diskmeter.o \
pagemeter.o \
intratemeter.o \
winders.o \
perfcount.o \
netmeter.o \
MeterMaker.o

CFILES := $(OBJS:.o=.cc)
DEPFILES := $(OBJS:%=.%.d)

vpath %.h $(TOP)
vpath %.cc $(TOP)

#-----------------------------------------------------------------------

all : libmeter.a


clean :
	rm -f $(OBJS) $(DEPFILES) libmeter.a *~

libmeter.a : $(OBJS)
	ar cvr libmeter.a $(OBJS)
	@RANLIB@ $@

@AUTODEPEND@
