include ../Makefile.config
@AUTODEPRULE_SUBDIR@

#arch=$(shell uname -m)
#export arch

#CXXFLAGS += -I$(TOP)

OBJS = \
cdiskmeter.o \
pdiskmeter.o

FAIL_ARCHS = arm m68k powerpc s390 sparc 3D s390x powerpc64


CFILES := $(OBJS:.o=.cc)
DEPFILES := $(OBJS:%=.%.d)

vpath %.h $(TOP)
vpath %.cc $(TOP)

#-----------------------------------------------------------------------

all : libcmeter.a


clean :
	rm -f $(OBJS) $(DEPFILES) libcmeter.a *~

libcmeter.a : $(OBJS)
	ar cvr libcmeter.a $(OBJS)
	@RANLIB@ $@

@AUTODEPEND@
